<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Price</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.label %></td>
        <td><%= book.price %></td>
        <td><%= book.isbn %></td>
        <td>
          <div>
            <%= link_to 'Show', book %>
            <%= link_to 'Edit', edit_book_path(book) %>
            <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>