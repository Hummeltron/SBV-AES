<% if notice != nil %>
  <p id="notice"><%= notice %></p>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title" style="display:inline"><%= @classname.full_name %></h3>
    <div class="btn-group right">
    	<%= link_to 'Preisliste', classname_price_path(@classname), :class => "btn btn-default" %>
    	<%= link_to 'Bücherliste', classname_list_path(@classname), :class => "btn btn-default" %>
    	<%= link_to 'Bearbeiten', edit_classname_path(@classname), :class => "btn btn-default" %>
    </div>
  </div>
  <div class="panel-body">
    <ul class="list-group" style="margin:0px">
      <% @classname.students.to_ary.each do |student| %>
        <!--<a href="#" class="list-group-item"><%= student.full_name %></a>-->
        <%= link_to student.full_name, student, class: "list-group-item" %>
      <% end %>
    </ul>
  </div>
  <div class="panel-footer">
    <%= link_to "Zurück", classnames_path, :class => "btn btn-default" %>
  </div>
</div>