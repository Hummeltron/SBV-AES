<p id="notice"><%= notice %></p>

<div>
	<h2 style="display: inline">Class</h2>
	<div class="btn-group" style="float: right">
		<%= link_to classname_path(@classname, :format => :pdf), :class => "button" do %>
			<i class="glyphicon glyphicon-download-alt"></i>
		<% end %>
		<%= link_to edit_classname_path(@classname), :class => "button" do %>
			<i class="glyphicon glyphicon-pencil"></i>
		<% end %>
	</div>
</div>

<p>
	<strong>Name:</strong>
	<%= @classname.name %>
</p>

<p>
	<strong>Year:</strong>
	<%= @classname.year %>
</p>

<h2>Students</h2>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Surname</th>
			<th>Birth</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		<% @classname.students.to_ary.each do |student| %>
			<tr>
				<td><%= student.name %></td>
				<td><%= student.surname %></td>
				<td><%= student.birth %></td>
				<td><%= student.price %></td>
				<td>
					<div>
						<%= link_to 'Anzeigen', student %>
						<%= link_to 'Bearbeiten', edit_student_path(student) %>
						<%= link_to 'LÃ¶schen', student, method: :delete, data: { confirm: 'Bin ich sicher das ich sterben will?' } %>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<div class="btn-group">
	<%= link_to 'Back', classnames_path, :class => "button" %>
</div>
