<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Buch</th>
      <th>Schüler</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @copies.each do |copy| %>
      <tr>
        <td><%= copy.id %></td>
        <td><%= copy.book.label %></td>
        <td>
          <% if copy.student == nil %>
            -
          <% else %>
            <%= copy.student.full_name %>
          <% end %>
        </td>
        <td><div>
          <%= link_to 'Anzeigen', copy %>
          <%= link_to 'Bearbeiten', edit_copy_path(copy) %>
          <%= link_to 'Löschen', copy, method: :delete, data: { confirm: 'Ich will nicht sterben?' } %>
        </div></td>
      </tr>
    <% end %> 
  </tbody>
</table>