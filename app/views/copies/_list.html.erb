<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Student</th>
      <th>Topay</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @copies.each do |copy| %>
      <tr>
        <td><%= copy.book.label %></td>
        <td><%= copy.student.full_name %></td>
        <td><%= copy.topay %></td>
        <td><%= copy.code %></td>
        <td>
          <div>
            <%= link_to 'Show', copy %>
            <%= link_to 'Edit', edit_copy_path(copy) %>
            <%= link_to 'Destroy', copy, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %> 
  </tbody>
</table>