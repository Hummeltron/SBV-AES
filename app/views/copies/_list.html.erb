<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Student</th>
      <th>Topay</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @copies.each do |copy| %>
      <tr>
        <td><%= copy.book.label %></td>
        <% if copy.student == nil %>
          <td>No student assigned</td>
        <% else %>
          <td><%= copy.student.full_name %></td>
        <% end %>
        <td><%= copy.topay %></td>
        <td><%= copy.code %></td>
        <td>
          <div>
            <%= link_to 'Anzeigen', copy %>
            <%= link_to 'Bearbeiten', edit_copy_path(copy) %>
            <%= link_to 'LÃ¶schen', copy, method: :delete, data: { confirm: 'Ich will nicht sterben?' } %>
          </div>
        </td>
      </tr>
    <% end %> 
  </tbody>
</table>