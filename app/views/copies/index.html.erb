<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title" style="display:inline">Kopien</h3>
    <form id="copySearch" class="form-inline pull-right">
      <div class="form-group">
        <input type="number" id="copyId" class="form-control" placeholder="Scan copy" />
        <%= link_to 'Neue Kopie', new_copy_path, :class => "btn btn-default" %>
      </div>
    </form>
  </div>
  <% if @copies.present? %>
	  <%= render 'list' %>
  <% else %>
	  <p>Keine Kopien vorhanden</p>
  <% end %>
  <div class="panel-footer">
    <nav aria-label="...">
      <ul class="pager">
        <li class="previous">
          <!--<a href="#"><span aria-hidden="true">&larr;</span> Previous</a>-->
          <%= link_to copies_path(:page => @page) do %>
            <span aria-hidden="true">&larr;</span> Previous</a>
          <% end %>
        </li>
        <li class="next">
          <!--<a href="#">Next <span aria-hidden="true">&rarr;</span></a>-->
          <%= link_to copies_path(:page => (@page + 2)) do %>
            Next <span aria-hidden="true">&rarr;</span>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</div>
