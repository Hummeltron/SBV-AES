<% if notice != nil %>
  <p id="notice"><%= notice %></p>
<% end %>
<div class="panel panel-default">
	<div class="panel-heading clearfix">
		<h3 class="panel-title" style="display:inline">Kopie - <%= @copy.book.label %></h3>
		<div class="btn-group pull-right">
		  <%= link_to copy_path(@copy, :format => :pdf), :class => "button" do %>
		    <span class="glyphicon glyphicon-barcode"></span>
		  <% end %>
			<%= link_to 'Bearbeiten', edit_copy_path(@copy), :class => "button" %>
			<%= link_to 'Löschen', @copy, method: :delete, data: { confirm: 'Sind sie sicher?' }, :class => "button" %>
		</div>
	</div>
	<div class="panel-body">
    <strong>Schüler:</strong>
    </br>
    <% if @copy.student.nil? %>
      Diese Kopie gehört keinem Schüler.
    <% else %>
      <%= @copy.student.full_name %>
    <% end %>
    </br>
    </br>
    <strong>Kaufbuch:</strong>
    </br>
    <%= @copy.book.topay == true ? "Ja" : "Nein" %>
    </br>
    </br>
    <strong>Strichcode:</strong>
    </br>
    <%= @copy.id %>
	</div>
	<div class="panel-footer">
		<div class="btn-group">
		  <% if @copy.student != nil %>
			  <%= link_to 'Zurück', student_path(@copy.student), :class => "button" %>
			<% else %>
			  <%= link_to 'Zurück', copies_path, :class => "button" %>
			<% end %>
		</div>
	</div>
</div>
